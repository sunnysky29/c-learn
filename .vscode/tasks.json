{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-12 生成活动文件",
            "command": "/bin/g++-12",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",                              // 当前活动文件
                "${fileDirname}/src/*.cpp",             // 包含 src 目录下所有cpp文件
                "-I${fileDirname}/header",              // 添加头文件搜索路径
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}